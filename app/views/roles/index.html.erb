<p id="notice"><%= notice %></p>

<h1>Stanowiska</h1>

<table>
  <thead>
    <tr>
      <th>Nazwa</th>
      <th>Wyplata</th>
      <th colspan="3">Akcje</th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.nazwa %></td>
        <td><%= role.wyplata %></td>
        <td><%= link_to 'Pokaż', role %></td>
        <td><%= link_to 'Edytuj', edit_role_path(role) %></td>
        <td><%= link_to 'Usuń', role, method: :delete, data: { confirm: 'Jesteś pewien?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Dodaj Stanowisko', new_role_path %>
