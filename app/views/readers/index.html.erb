<p id="notice"><%= notice %></p>

<h1>Readers</h1>

<table>
  <thead>
    <tr>
      <th>Imie</th>
      <th>Nazwisko</th>
      <th>Telefon</th>
      <th>Data urodzenia</th>
      <th>Email</th>
      <th>Haslo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @readers.each do |reader| %>
      <tr>
        <td><%= reader.imie %></td>
        <td><%= reader.nazwisko %></td>
        <td><%= reader.telefon %></td>
        <td><%= reader.data_urodzenia %></td>
        <td><%= reader.email %></td>
        <td><%= reader.haslo %></td>
        <td><%= link_to 'Show', reader %></td>
        <td><%= link_to 'Edit', edit_reader_path(reader) %></td>
        <td><%= link_to 'Destroy', reader, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

